+	.acpi_xlate     = iort_iommu_xlate,
+#endif
 };
 
 static __init int arm_smmu_dt_init(struct dt_device_node *dev,
diff --git a/xen/include/xen/iommu.h b/xen/include/xen/iommu.h
index 8fa819329d..e057dd2a63 100644
